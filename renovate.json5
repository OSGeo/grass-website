{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:best-practices",
        ":semanticCommits",
        ":semanticCommitTypeAll(CI)",

        // allows using comments starting with
        // "# renovate: " to update _VERSION
        // environment variables in GitHub Action files.
        "customManagers:githubActionsVersions",
        // allows using comments starting with
        // "# renovate: " to update _VERSION
        // ENV or ARG in a Dockerfile.
        "customManagers:dockerfileVersions",

        // Use config file from upstream GRASS repo
        "github>OSGeo/grass:renovate.json5",
        "customManagers:biomeVersions"
    ],

    "packageRules": [
        {
            "groupName": "biome",
            "matchPackageNames": [
                "biomejs/pre-commit",
                "@biomejs/biome"
            ]
        }
    ]
}
